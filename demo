#include <iostream>
using namespace std;

int main() {
    int n;
    char op;
    double num, result;

    cout << "Enter operation (+, -, *, /): ";
    cin >> op;

    cout << "How many numbers? ";
    cin >> n;

    cout << "Enter number 1: ";
    cin >> result;  // start with the first number

    for (int i = 2; i <= n; i++) {
        cout << "Enter number " << i << ": ";
        cin >> num;

        switch(op) {
            case '+':
                result += num;
                break;
            case '-':
                result -= num;
                break;
            case '*':
                result *= num;
                break;
            case '/':
                if (num != 0)
                    result /= num;
                else {
                    cout << "Error: Division by zero not allowed";
                    return 0;
                }
                break;
            default:
                cout << "Invalid operator";
                return 0;
        }
    }

    cout << "Result: " << result;
    return 0;
}
