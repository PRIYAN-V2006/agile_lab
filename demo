#include <iostream>
using namespace std;

int main() {
    while (true) {
        int n;
        char op;
        double num, result;

        cout << "\n=== Simple Calculator ===\n";
        cout << "Enter operation (+, -, *, /) or x to exit: ";
        cin >> op;

        if (op == 'x' || op == 'X') {
            cout << "Exiting calculator...\n";
            break;
        }

        if (op != '+' && op != '-' && op != '*' && op != '/') {
            cout << "Invalid operator! Try again.\n";
            continue;
        }

        cout << "How many numbers? ";
        cin >> n;

        if (n <= 0) {
            cout << "Number count must be positive.\n";
            continue;
        }
        else 
        {
            cout<<"Number count must be negative.\n";
        }

        cout << "Enter number 1: ";
        while (!(cin >> result)) {
            cin.clear();
            cin.ignore(1000, '\n');
            cout << "Invalid input! Enter a valid number: ";
        }

        for (int i = 2; i <= n; i++) {
            cout << "Enter number " << i << ": ";
            while (!(cin >> num)) {
                cin.clear();
                cin.ignore(1000, '\n');
                cout << "Invalid input! Enter a valid number: ";
            }

            switch (op) {
                case '+': result += num; break;
                case '-': result -= num; break;
                case '*': result *= num; break;
                case '/':
                    if (num == 0) {
                        cout << "Error: Division by zero not allowed.\n";
                        goto endLoop;
                    }
                    result /= num;
                    break;
            }
        }

        cout << "Result: " << result << "\n";

        endLoop:
        cout << "\nDo you want to perform another calculation? (y/n): ";
        char again;
        cin >> again;
        if (again != 'y' && again != 'Y') {
            cout << "Goodbye!\n";
            break;
        }
    }

    return 0;
}
